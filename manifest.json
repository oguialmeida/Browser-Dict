{
  "manifest_version": 3,
  "name": "Hiper Dict",
  "version": "1.0",
  "description": "Captura uma palavra selecionada e a envolve com um span.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/index.js"]
    }
  ],
  "action": {
    "default_popup": "src/index.html",
    "default_icon": "src/img/icon.png"
  },
  "icons": {
    "48": "src/img/icon.png"
  }
}
