{
    "manifest_version": 3,
    "name": "Interação com a Página",
    "version": "1.0",
    "description": "Extensão para selecionar palavras em uma página.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "icons": {
      "48": "icon.png"
    }
  }
  